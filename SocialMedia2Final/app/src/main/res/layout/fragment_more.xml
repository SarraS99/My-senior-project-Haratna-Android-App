<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MoreFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:orientation="vertical">


        <!--*******Image Profil**********-->
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileToolBar"
            android:orientation="vertical"
            android:weightSum="100">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_user"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/user1_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم المستخدم"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/display_name"
            android:maxLines="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="30sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:text="اعدادات الحساب"
            android:textColor="@color/colorBlack"
            android:textSize="30sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:drawablePadding="10dp"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="30sp" />
        <!--*******Edit Profile**********-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:drawableRight="@drawable/ic_profile_black"
            android:drawableTint="@color/colorBlack"
            android:drawablePadding="10dp"
            android:text="الملف الشخصي"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:id="@+id/edit_profile"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <!--*******Users**********-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:drawableRight="@drawable/ic_notification_black"
            android:drawableTint="@color/colorBlack"
            android:drawablePadding="10dp"
            android:text="الإشعارات"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:id="@+id/usersTv"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <!--*******Chat**********-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:drawableRight="@drawable/ic_chat_black"
            android:drawableTint="@color/colorBlack"
            android:drawablePadding="10dp"
            android:text="الدردشات"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:id="@+id/chatsTv"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <!--*******Groups**********-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:drawableRight="@drawable/ic_baseline_groups_24"
            android:drawableTint="@color/colorBlack"
            android:drawablePadding="10dp"
            android:text="الدردشات الجماعية"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:id="@+id/group_chatsTv"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <!--*******notification**********-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:drawableRight="@drawable/ic_notification_black"
            android:drawableTint="@color/colorBlack"
            android:drawablePadding="10dp"
            android:text="ٌإعدادات الإشعارات"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:id="@+id/notifi_settingsTv"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <!--*******Logout**********-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:drawableRight="@drawable/ic_baseline_logout_24"
            android:drawableTint="@color/colorBlack"
            android:drawablePadding="10dp"
            android:text="تسجيل الخروج"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:id="@+id/logout"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>

</FrameLayout>